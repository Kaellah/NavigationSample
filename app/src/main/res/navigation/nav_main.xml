<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_main"
            app:startDestination="@id/fragment_home">

    <fragment
            android:id="@+id/fragment_home"
            android:name="com.kaellah.navigationsample.HomeFragment"
            android:label="@string/menu_home"
            tools:layout="@layout/fragment_home">

        <action
                android:id="@+id/action_home_fragment_to_profile_fragment"
                app:destination="@+id/fragment_profile"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
            android:id="@+id/fragment_profile"
            android:name="com.kaellah.navigationsample.ProfileFragment"
            android:label="@string/menu_profile"
    />
</navigation>